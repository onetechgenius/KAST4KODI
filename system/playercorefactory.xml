	<!-- Rules for which external player to use -->
	<!-- Cast2TV-PRO Pro is default
	         change player= value to one of the above names to change this -->
	<rules action="prepend">		
		<!-- rtmp Streams -->
		<rule protocols="rtmp" player="Cast2TV-Lite"/>
		<rule protocols="http" player="Cast2TV-Lite"/>
		<rule protocols="https" player="Cast2TV-Lite"/>
		<rule protocols="rtmpe" player="Cast2TV-Lite"/>
      
		<!-- rtsp Streams -->
		<rule protocols="rtsp" player="Cast2TV-Lite" />
		
		<!-- Video files -- Default rule (last to ensure above trigger first makes Cast2TV-PRO default for all playback -->
		<rule video="true" player="Cast2TV-Lite"/>
	</rules>
</playercorefactory>
